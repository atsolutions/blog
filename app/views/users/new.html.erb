<h1 align="center"> Sign up for blog </h1>
<%= render 'shared/errors', obj: @user%>

<%= form_for @user do |f| %>
  <div class="form-group row">
        <div class = "control-label col-sm-2">
            <%=f.label :username %>
        </div>
        <div class = "col-sm-8">
            <%=f.text_field :username, class: "form-control", placeholder: "Enter User name:", autofocus: true %>
        </div>   
  </div>

    <div class="form-group row">
        <div class = "control-label col-sm-2">
            <%=f.label :email %>
        </div>
        <div class = "col-sm-8">
            <%=f.email_field :email, class: "form-control", placeholder: "Description:"%>
        </div>   
  </div>

   <div class="form-group row">
        <div class = "control-label col-sm-2">
            <%=f.label :password %>
        </div>
        <div class = "col-sm-8">
            <%=f.password_field :password, class: "form-control", placeholder: "Enter Password:"%>
        </div>   
  </div>

  <div class = "form-group row">
    <div class = "col-sm-10 offset-sm-2">
        <%= f.submit "Signup",  class: "btn btn-primary"%>
    </div>
  </div>
<% end %>
