<h2> <center> Title: <%= @article.title%> </center></h2>
    <div align="center">
        <ul class="listing">
            <div class="row">
                <div class="col-md-4 offset-md-4">
                    <div class = "card bg-light">
                        <li>Created by:</li>
                        <li> <%= link_to gravatar_for(@article.user), user_path(@article.user) %> </li>
                        <li class = "title">
                            <%= link_to @article.user.username, user_path(@article.user) %> </li>
                        <li><small> <%= pluralize(@article.user.articles.count, "article") if @article.user.articles %> </small> </li>
                    </div>
                </div>
            </div>
        </ul>
    </div>
<div class = "row">
<div class = "col-sm-8 offset-sm-2">
<div class = "card  bg-light">
    <div class = "card-header">
    <strong>Description</strong>
    </div> 
      <div class="card-body"> 
    <%= simple_format(@article.description)%>
    <div class = "article-actions">
    <% if logged_in? && (current_user == @article.user || current_user.admin?) %>
        <%= link_to 'Edit this article', edit_article_path(@article), class: "btn btn-primary btn-sm" %>
        <%= link_to 'Delete article', article_path(@article), class: "btn btn-danger btn-sm",  method: :delete, data: {confirm: "U sure?"}  %>

        <% end %>
        <%= link_to 'Back to articles', articles_path, class: "btn btn-success btn-sm" %>

    </div>
    </div>
</div>
</div>
</div>